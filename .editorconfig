# see https://editorconfig.org
# candidate for shared package

root = true

[*]
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.html]
indent_size = 2

[*.{js,jsx,ts}]
indent_size = 4

[*.json]
indent_size = 4

[*.yml]
indent_size = 2

[*.scss]
indent_size = 2
